<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RadioGroup
        android:id="@+id/filterOptionsRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RadioButton
        android:id="@+id/showAssignmentsRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Assignments"
        android:textColor="#0A3056"/>

    <RadioButton
        android:id="@+id/showExamsRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Exams"
        android:textColor="#0A3056"/>

    <RadioButton
        android:id="@+id/showToDosRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show To-Dos"
        android:textColor="#0A3056"/>
    <RadioButton
        android:id="@+id/sortByDateAscRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort by Due Date"
        android:textColor="#0A3056" />

        <RadioButton
            android:id="@+id/showCompletedRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Completed"
            android:textColor="#0A3056"/>

    <RadioButton
        android:id="@+id/clearFiltersRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear Filters"
        android:textColor="#0A3056"/>

    <Button
        android:id="@+id/applyFilterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply Filter"
        android:textColor="#0A3056"
        app:backgroundTint="@null"
        android:background="@drawable/todo_list_buttons"/>
    </RadioGroup>
</LinearLayout>

