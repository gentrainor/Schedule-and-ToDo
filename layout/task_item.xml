<?xml version="1.0" encoding="utf-8"?>
<!-- task_item.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/task_box">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/taskNameTextView"
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Task Name"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/deleteTaskButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:backgroundTint="#0A3056"
            android:text="Delete" />
    </RelativeLayout>

    <TextView
        android:id="@+id/dueDateTextView"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:text="Due Date: MM/DD/YYYY"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <!-- Display course section -->
    <TextView
        android:id="@+id/courseSectionTextView"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:text="Course Section: Section Name"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check if completed"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_gravity="center_vertical"/>

    <CheckBox
        android:id="@+id/completionCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_gravity="center_vertical"
        android:buttonTint="@android:color/white"  />

    <Button
        android:id="@+id/editTaskButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:backgroundTint="#0A3056"/>


    <!-- Add any other relevant information as needed -->

</LinearLayout>
